    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pino": "^7.0.4",
    "pino-pretty": "^13.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
